<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Emergencycontacts">


    <TextView
        android:id="@+id/t_registeration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="EMERGENCY CONTACTS"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t_first"
        android:text="Enter contacts for emergency call"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_firstusername"
        android:hint="enter_name"
        android:inputType="text"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/first_mail"
        android:hint="enter_email"
        android:inputType="textEmailAddress"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/first_mobile"
        android:hint="enter_phonenumber"
        android:inputType="phone"
        android:maxLength="10"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>






    <EditText
        android:id="@+id/second_username"
        android:hint="enter_name"
        android:inputType="text"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/second_mail"
        android:hint="enter_email"
        android:inputType="textEmailAddress"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/second_mobile"
        android:hint="enter_phonenumber"
        android:inputType="phone"
        android:maxLength="10"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/t_third"
        android:text="Enter contact details for emergency alert messages"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/et_thirdusername"
        android:hint="enter_name"
        android:inputType="text"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/third_mail"
        android:hint="enter_email"
        android:inputType="textEmailAddress"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/third_mobile"
        android:hint="enter_phonenumber"
        android:inputType="phone"
        android:maxLength="10"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/bt_submit"
        android:text="submit"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>